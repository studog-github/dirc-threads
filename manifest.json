{
    "manifest_version": 2,
    "name": "DIRC Threads",
    "version": "0.1",

    "description": "Adds threads to DIRC boards",

    "author": "Stuart MacDonald",
    "background": {
        "scripts": [
            "bg_urlAdder.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.dripinvesting.org/boards/BoardMsgs.asp?BID=*"
            ],
            "js": ["jquery-3.3.1.slim.min.js", "fg_threadAdder.js"]
        },
        {
            "matches": [
                "https://www.dripinvesting.org/boards/Read.asp?MID=*&Thread=Yes"
            ],
            "js": ["jquery-3.3.1.slim.min.js", "fg_threadHandler.js"]
        }
    ],
    "permissions": [
        "history"
    ]
}
